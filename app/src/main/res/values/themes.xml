<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HAFEES_Score" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/holo_blue_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!-- CUSTOM STYLE FOR THE BUTTONS-->
    <style name="myButton">
        <item name="backgroundTint">@color/holo_blue_dark</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--custom style for team 1-->
    <style name="team1Style">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--custom style for team 2-->
    <style name="team2Style">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- radio buttons style-->
    <style name="radioButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/holo_blue_dark</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- radio score values style-->
    <style name="scoreTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/holo_blue_dark</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>